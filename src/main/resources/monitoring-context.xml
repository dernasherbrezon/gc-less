<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd"
	default-lazy-init="true">

	<bean id="collectd.sender" class="org.collectd.protocol.UdpSender">
		<property name="servers">
			<list>
				<bean class="java.net.InetSocketAddress">
					<!-- <constructor-arg index="0" value="104.131.119.160"/> -->
					<constructor-arg index="0" value="127.0.0.1" />
					<constructor-arg index="1" value="2007" />
				</bean>
			</list>
		</property>
	</bean>

	<bean id="udpSender" class="com.st.collectd.UdpSender">
		<property name="impl" ref="collectd.sender" />
	</bean>

	<bean class="org.collectd.mx.MBeanCollector" lazy-init="false">
		<property name="instanceName" value="${serverType}-${serverID}" />
		<property name="interval" value="10" />
		<property name="names">
			<list>
				<value>java.lang:*</value>
				<!-- proper regexp to output only required cache metrics -->
			</list>
		</property>
	</bean>

	<bean class="com.st.collectd.MetricsAggregator" lazy-init="false">
		<property name="defaultSender" ref="udpSender" />
		<property name="intervalSec" value="10"/>
	</bean>

</beans>